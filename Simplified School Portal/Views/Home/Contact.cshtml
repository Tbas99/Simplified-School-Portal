@model Simplified_School_Portal.Models.Mailmodel
@{
    ViewBag.Title = "Contact us by email!";
}

<!-- Keep it off the top. -->
<div class="col-xs-12" style="height:50px;"></div>

<div class="container">
    <div class="row">
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "col-md-6 col-md-offset-3 go-right formTweaks" }))
        {
            <!-- To negate XSS attacks, generate an AntiForgeryToken -->
            @Html.AntiForgeryToken()

            <!-- Make sure everything is filled, show a warning if not -->
            @Html.ValidationSummary()

            <h2>@ViewBag.Title</h2>
            <p>Write us an email about anything, and we will try to respond as soon as possible!</p>

            <!-- Name input-->
            <div class="form-group">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "Name", @name = "Name", @type = "text", @required = "required" })
                <label for="Name">Your Name</label>
            </div>

            <!-- Email input-->
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "Email", @name = "Email", @type = "Email", @required = "required" })
                <label for="Email">Your Email</label>
            </div>

            <!-- Message body-->
            <div class="form-group">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @id = "Message", @name = "Message", @required = "required" })
                <label for="Message">Your Message</label>
            </div>

            <!-- Form actions -->
            <div class="form-group">
                <div class="col-md-12 text-center cleanPadding">
                    <button type="submit" class="btn btn-default btn-block" value="Log in">Submit</button>
                </div>
            </div>
        }

        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewBag.Message");
                };
            </script>
        }
    </div>
</div>
<!-- Keep it off the top. -->
<div class="col-xs-12" style="height:73px;"></div>

